<html>

<head>
    <title>

        <%= tittle %>

    </title>
    <!-- --------------------------------- Google Font --------------------------------------- -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&display=swap" rel="stylesheet">

    <!-------------------------- font awesome link ------------------------------- -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">

    <!-- ------------------------- linking css file ------------------------------------------- -->
    <link rel="stylesheet" href="./assets/style.css" </head>
    <!-- ------------------------ Bootstrap -------------------------------------------------- -->
    <script src=" https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

<body>
    <section class="container">
        <h1 align="center" style="font-family: 'Bree Serif', serif">TODO APP</h1>

        <!-- form to create task -->
        <form action="/create-task" method="POST">

            <table class="table">
                <thead>
                    <!-- ---------------- row-1 ----------------------- -->
                    <tr class="table-active">
                        <!-- ---------------- col1 ----------------------- -->
                        <th>Description</th>
                        <!-- ---------------- col2 ----------------------- -->
                        <th>category</th>
                        <!-- ---------------- col3 ----------------------- -->
                        <th>date</th>
                        <!-- ---------------- col4 ----------------------- -->
                        <th>Add Task</th>
                    </tr>
                </thead>


                <tbody>
                    <!-- ---------------- row-2 ----------------------- -->
                    <tr>
                        <!-- ---------------- col1 ----------------------- -->
                        <td> <input type="text" name="description" placeholder="What do you need to do?"
                                required></input></th>
                            <!-- ---------------- col2 ----------------------- -->
                        <td> <select name="category" required>

                                <option><b>Personal</b></option>
                                <option><b>Work</b></option>
                                <option><b>School</b></option>
                                <option><b>Cleaning</b></option>
                                <option><b>Other</b></option>

                            </select></th>
                            <!-- ---------------- col3 ----------------------- -->
                        <td> <input type="date" name="date" required></th>
                            <!-- <td><input type="submit" class="btn btn-success" id="add" value="ADD
                            TASK"></th> -->
                            <!-- ---------------- col4 ----------------------- -->
                        <td>
                            <button id="add-button" type="submit" class="btn btn-success" id="add" value="ADD
                            TASK">
                                <i class="fas fa-plus"></i>
                                &nbsp;
                                <span>Add Task</span>
                            </button>
                            </th>
                    </tr>
                </tbody>

            </table>
        </form>
    </section>

    <section class="container">
        <h1 align="center" style="font-family:  'Bree Serif', serif">TASKS LIST</h1>

        <form action="/delete-task" method="GET">
            <table class="table">
                <thead>
                    <!-- ---------------- new row created taking input data (row-1) ----------------------- -->
                    <tr class="table-active">
                        <th>Select</th>
                        <th>Task</th>
                        <th>Category</th>
                        <th>due date</th>
                    </tr>
                </thead>
                <% for(let i of task) { %>
                    <tr>
                        <td> <input type="checkbox" name="<%= i._id %>"></td>
                        <td>
                            <p id="task-description">
                                <%= i.description %>
                            </p>
                        </td>
                        <td>
                            <p id="task-category">:
                                <%= i.category %>
                            </p>
                        </td>
                        <td>
                            <p id="due-date">:
                                <%= i.date %>
                            </p>
                        </td>
                    </tr>
                    <% } %>
            </table>
            <div align="center">
                <!-- <i class="fas fa-trash-alt"></i>
                <input type="submit" class="btn btn-danger" value="DELETE TASK"> -->

                <button id="add-button" type="submit" class="btn btn-danger" value="DELETE
                                            TASK">
                    <i class="fas fa-trash-alt"></i>
                    &nbsp;
                    <span>Delete Task</span>
                </button>
            </div>
        </form>
    </section>
</body>

</html>